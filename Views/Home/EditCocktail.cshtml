
@model AlkoBot.ViewModels.CocktailViewModel
@{
    ViewData["Title"] = "EditCocktail";
}

<h4>Изменение коктейля</h4>

<form enctype="multipart/form-data" asp-action="EditCocktail">

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Recipe" class="control-label"></label>
        <textarea asp-for="Recipe" class="form-control"></textarea>
        <span asp-validation-for="Recipe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CocktailImage" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="CocktailImage" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile" >Choose file</label>
        </div>
        <span asp-validation-for="CocktailImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn" />
        <a asp-action="Index" class="btn">Назад</a>
    </div>
</form>


@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}