@model AlkoBot.Models.Cocktail
@{
    ViewBag.Title = "Удаление коктейля";
}

<div>
    <h2>Коктейль @Model.Name</h2>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.CocktailId)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Рецепт</dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe);
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteCocktail" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
