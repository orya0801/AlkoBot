@model IEnumerable<AlkoBot.Models.Cocktail>

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="text-center text-uppercase">List of employee</h4>

<p>
    <a asp-action="CreateCocktail" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CocktailId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@employee.CocktailPicture"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                    @employee.CocktailId
                </td>
                <td>@employee.Name</td>
            </tr>

        }
    </tbody>
</table>

